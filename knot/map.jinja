
{%- load_yaml as base_defaults %}
Debian:
  pkgs:
  - dnsutils
  - knot

'*':
  pkgs:
  - knot
  bind:
    ipv4:
      address: 0.0.0.0
      port: 53
    ipv6:
      address: '::'
      port: 53
  service: knot
  file:
    config: /etc/knot/knot.conf
{%- endload %}

{%- set server = salt['grains.filter_by'](base_defaults, merge=salt['pillar.get']('knot:server')) %}
